{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],

    /* üí° Avslappnade inst√§llningar */
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,                 // ‚Üê st√§ng av strict-l√§ge helt
    "noUnusedLocals": false,         // ‚Üê inga varningar om oanv√§nt
    "noUnusedParameters": false,     // ‚Üê inga varningar om oanv√§nt
    "noUncheckedSideEffectImports": false,
    "noFallthroughCasesInSwitch": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
